    font-size: 30px;
  }
}

@media (max-width: 480px) {
  .header img {
    height: 200px;
  }

  .header .title {
    font-size: 24px;
  }

  .topnav {
    padding: 0.5rem;
  }

  .topnav .search input {
    width: 90%;
  }
}


