}

.topnav .left-menu a {
  color: #333;
  text-decoration: none;
  padding: 0.5rem 1rem;
  font-size: larger;
  transition: transform 0.3s, box-shadow 0.3s;
}

.topnav .left-menu a:hover {
  transform: translateY(-3px);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.topnav .search {
  margin-left: auto;
  margin-right: 1rem;
}

.topnav .search input {
  padding: 0.5rem;
  border-radius: 20px;
  border: 1px solid #ccc;
}

.topnav .logo {
  display: flex;
  align-items: center;
}

.header {
  position: relative;
  text-align: center;
  color: white;
}

.header img {
  width: 100%;
  height: 300px;
  object-fit: cover;
}

.header .title {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 50px;
  font-weight: bold;
}

/* Responsive styling */
@media (max-width: 768px) {
  .topnav {
    flex-direction: column;
    padding: 1rem;
  }

  .topnav .left-menu {
    flex-direction: column;
  }

  .topnav .left-menu a {
    padding: 0.5rem 0;
    font-size: medium;
  }

  .topnav .search {
    margin: 1rem 0 0;
    width: 100%;
    text-align: center;
  }

  .topnav .search input {
    width: 80%;
  }

  .header .title {
    font-size: 30px;
  }
}

@media (max-width: 480px) {
  .header img {
    height: 200px;
  }

  .header .title {
    font-size: 24px;
  }

  .topnav {
    padding: 0.5rem;
  }

  .topnav .search input {
    width: 90%;
  }
}


